{
	"manifest_version": 3,
	"name": "ChatGPT Account Switcher",
	"version": "1.1.0",
	"description": "Switch between ChatGPT accounts seamlessly with a single click",
	"permissions": ["cookies", "storage", "activeTab"],
	"host_permissions": ["https://chatgpt.com/*"],
	"background": {
		"service_worker": "background/background.js"
	},
	"content_scripts": [
		{
			"matches": ["https://chatgpt.com/*"],
			"js": ["content/content.js"]
		}
	],
	"action": {
		"default_popup": "popup/popup.html",
		"default_title": "ChatGPT Account Switcher"
	},
	"icons": {
		"16": "icons/icon16-light.png",
		"32": "icons/icon32-light.png",
		"48": "icons/icon48-light.png",
		"128": "icons/icon128-light.png"
	}
}
